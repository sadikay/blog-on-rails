<%= form_for [:admin, @articles], data: {abide: ''} do |form| %>    <% if @articles.errors.any? %>        <div class="row">          <p>Aşagidaki hatalari düzeltip tekrar deneyiniz</p>          <ul class="square">            <% @user.errors.full_messages.each do |message| %>                <li><%= message %></li>            <% end %>          </ul>        </div>    <% end %>    <br><br>    <div>      <div>        <%= form.label "Kategori Seç:"%>        <%= form.collection_select :category_id, @category, :id, :name, {}, {:class=>'small'} %>      </div>      <br>      <div>        <%= form.label "Makale Başlığı:" %>        <%= form.text_field :title, required: true %>      </div>      <div>        <%= form.label "Açıklama Gir:" %>        <%= form.text_field :description, required: true %>      </div>      <br>      <div>        <%= form.label "Makale Resmi:" %>        <%= form.file_field :logo %>      </div>      <br>      <div>        <%= form.submit %>      </div>    </div><% end %><br>